<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalaryManager.WPF.UserControls"
             xmlns:ViewModels="clr-namespace:SalaryManager.WPF.ViewModels" x:Class="SalaryManager.WPF.UserControls.Option_General"
             mc:Ignorable="d" 
             Background="{x:Static SystemColors.ControlLightBrush}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModels:ViewModel_GeneralOption/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Content="Excelテンプレートの保存先パス"/>
        <TextBox Grid.Column="1" Text="{Binding ExcelTemplatePath_Text}" IsReadOnly="True" />
        <Button Grid.Column="2" Content="開く" Command="{Binding SelectExcelTemplatePath_Command}"/>
        <Button Grid.Column="3" Content="初期値に戻す" Command="{Binding SetDefault_SelectExcelTemplatePath_Command}"/>
        
        
        
        <Button Grid.Row="4" Grid.Column="1" Content="保存" Command="{Binding Save_Command}"/>
    </Grid>
</UserControl>
