<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalaryManager.WPF.UserControls"
             xmlns:ViewModels="clr-namespace:SalaryManager.WPF.ViewModels" x:Class="SalaryManager.WPF.UserControls.Option_General"
             mc:Ignorable="d" 
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             FontFamily="{Binding FontFamily_FontFamily}"
             Background="{x:Static SystemColors.ControlLightBrush}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModels:ViewModel_GeneralOption/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Label Content="SQLiteの保存先パス"/>
        <TextBox Grid.Column="1" Text="{Binding SelectSQLite_Text}" IsReadOnly="True" />
        <Button Grid.Column="2" Content="開く" Command="{Binding SelectSQLite_Command}"/>
        <Button Grid.Column="3" Content="初期値に戻す" Command="{Binding SetDefault_SelectSQLite_Command}"/>

        <Label Grid.Row="1" Content="Excelテンプレートの保存先パス"/>
        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding SelectExcelTempletePath_Text}" IsReadOnly="True" />
        <Button Grid.Column="2" Grid.Row="1" Content="開く" Command="{Binding SelectExcelTemplatePath_Command}"/>
        <Button Grid.Column="3" Grid.Row="1" Content="初期値に戻す" Command="{Binding SetDefault_SelectExcelTemplatePath_Command}"/>

        <Label Grid.Row="2" Content="フォント" />
        <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" ItemsSource="{Binding FontFamily_ItemSource}" Text="{Binding FontFamily_Text}">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="SelectionChanged">
                    <behaviors:InvokeCommandAction Command="{Binding FontFamily_SelectionChanged}" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
        </ComboBox>
        <Button Grid.Column="3" Grid.Row="2" Content="初期値に戻す" Command="{Binding SetDefault_FontFamily_Command}"/>

        <Button Grid.Row="4" Grid.Column="1" Content="保存" Command="{Binding Save_Command}"/>
    </Grid>
</UserControl>
