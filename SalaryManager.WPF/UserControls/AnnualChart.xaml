        <ViewModels:ViewModel_AnnualChart/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Content="{Binding TargetDate_Content.Value}" 
               Grid.ColumnSpan="4"
               HorizontalAlignment="Center"/>

        <Label Content="支給額計"
               Grid.Column="1"
               Grid.Row="1" 
               HorizontalAlignment="Center" />

        <Label Content="差引支給額"
               Grid.Column="2"
               Grid.Row="1" 
               HorizontalAlignment="Center" />

        <Label Content="副業額"
               Grid.Column="3"
               Grid.Row="1" 
               HorizontalAlignment="Center" />

        <Label Content="1月" 
               Grid.Row="2" />
        <TextBox Grid.Column="1" 
                 Grid.Row="2" 
                 Style="{StaticResource AnnualChartItemNumeric_Style}"
                 Text="{Binding January_TotalSalary_Text.Value, StringFormat={}{0:N0}}" 
                 IsReadOnly="True"/>
        <TextBox Grid.Column="2" 
                 Grid.Row="2" 
                 Style="{StaticResource AnnualChartItemNumeric_Style}"
                 Text="{Binding January_TotalDeductedSalary_Text.Value, StringFormat={}{0:N0}}" 
                 IsReadOnly="True"/>
        <TextBox Grid.Column="3" 
                 Grid.Row="2" 
