<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalaryManager.WPF.UserControls"
             xmlns:ViewModels="clr-namespace:SalaryManager.WPF.ViewModels" 
             x:Class="SalaryManager.WPF.UserControls.AnnualChart"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300"
             Background="{Binding Window_Background}">
    <UserControl.DataContext>
        <ViewModels:ViewModel_AnnualChart/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Content="{Binding TargetDate}" 
               Grid.ColumnSpan="4"
               HorizontalAlignment="Center"/>

        <Label Content="支給額計"
               Grid.Column="1"
               Grid.Row="1" 
               HorizontalAlignment="Center" />

        <Label Content="差引支給額"
               Grid.Column="2"
               Grid.Row="1" 
               HorizontalAlignment="Center" />

        <Label Content="副業額"
               Grid.Column="3"
               Grid.Row="1" 
               HorizontalAlignment="Center" />

        <Label Content="1月" 
               Grid.Row="2" />
        <TextBox Grid.Column="1" 
                 Grid.Row="2" 
                 Style="{StaticResource AnnualChartItemNumeric_Style}"
                 Text="{Binding TotalSalary_January, StringFormat={}{0:N0}}" 
                 IsReadOnly="True"/>
        <TextBox Grid.Column="2" 
                 Grid.Row="2" 
                 Style="{StaticResource AnnualChartItemNumeric_Style}"
                 Text="{Binding TotalDeductedSalary_January, StringFormat={}{0:N0}}" 
                 IsReadOnly="True"/>
        <TextBox Grid.Column="3" 
                 Grid.Row="2" 
                 Style="{StaticResource AnnualChartItemNumeric_Style}"
                 Text="{Binding TotalSideBusiness_January, StringFormat={}{0:N0}}" 
                 IsReadOnly="True"/>

        <Label Content="2月" 
               Grid.Row="3" />
