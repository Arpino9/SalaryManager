<Controls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryManager.WPF.Window"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:ViewModels="clr-namespace:SalaryManager.WPF.ViewModels" x:Class="SalaryManager.WPF.Window.WorkingPlace"
        mc:Ignorable="d"
        Background="{Binding Window_Background}"
        Title="{Binding Title, Mode=OneWay}" Height="450" Width="800">

    <Window.DataContext>
        <ViewModels:ViewModel_WorkingPlace/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ListView ItemsSource="{Binding WorkingPlaces_ItemSource}" 
                  SelectedIndex="{Binding WorkingPlaces_SelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="SelectionChanged">
                    <behaviors:InvokeCommandAction Command="{Binding WorkingPlaces_SelectionChanged}" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>

            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding CompanyName.Text}">
                        <GridViewColumnHeader Content="会社名" />
                    </GridViewColumn>

                    <GridViewColumn DisplayMemberBinding="{Binding Address}">
                        <GridViewColumnHeader Content="住所" />
                    </GridViewColumn>
                    
                    <GridViewColumn DisplayMemberBinding="{Binding Remarks}">
                        <GridViewColumnHeader Content="備考" />
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="60" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Content="派遣元会社名" 
                   Background="AliceBlue"/>
            <TextBox Grid.Column="1" 
                     Grid.ColumnSpan="7" 
                     Text="{Binding DispatchingCompanyName_Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            </TextBox>
            
            <Label Content="就業先名" 
                   Grid.Row="1" 
                   Background="AliceBlue"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="1" 
                     Grid.ColumnSpan="7" 
                     Text="{Binding CompanyName_Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="TextChanged">
                        <behaviors:InvokeCommandAction Command="{Binding AssignedCompanyName_TextChanged}" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </TextBox>

            <Label Content="住所" 
                   Grid.Row="2" 
                   Background="AliceBlue"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="2" 
                     Grid.ColumnSpan="7" 
                     Text="{Binding Address_Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextAlignment="{Binding Address_Text}">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="TextChanged">
                        <behaviors:InvokeCommandAction Command="{Binding Address_TextChanged}" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </TextBox>
            
            <Label Content="労働時間" 
                   Grid.Row="3" 
                   Background="AliceBlue"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="3" 
                     Text="{Binding WorkingTime_Start_Hour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="：" 
                   Grid.Column="2" 
                   Grid.Row="3" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Background="AliceBlue"/>
            <TextBox Grid.Column="3" 
                     Grid.Row="3" 
                     Text="{Binding WorkingTime_Start_Minute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="～" 
                   Grid.Column="4" 
                   Grid.Row="3" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Background="AliceBlue"/>
            <TextBox Grid.Column="5" 
                     Grid.Row="3" 
                     Text="{Binding WorkingTime_End_Hour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="～" 
                   Grid.Column="6" 
                   Grid.Row="3" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Background="AliceBlue"/>
            <TextBox Grid.Column="7" 
                     Grid.Row="3" 
                     Text="{Binding WorkingTime_End_Minute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="昼休憩" 
                   Grid.Row="4" 
                   Background="AliceBlue"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="4" 
                     Text="{Binding LunchTime_Start_Hour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="：" 
                   Grid.Column="2" 
                   Grid.Row="4" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Background="AliceBlue"/>
            <TextBox Grid.Column="3" 
                     Grid.Row="4" 
                     Text="{Binding LunchTime_Start_Minute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="～" 
                   Grid.Column="4" 
                   Grid.Row="4" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Background="AliceBlue"/>
            <TextBox Grid.Column="5" 
                     Grid.Row="4" 
                     Text="{Binding LunchTime_End_Hour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="～" 
                   Grid.Column="6" 
                   Grid.Row="4" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Background="AliceBlue"/>
            <TextBox Grid.Column="7" 
                     Grid.Row="4" 
                     Text="{Binding LunchTime_End_Minute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="休憩" 
                   Grid.Row="5" 
                   Background="AliceBlue"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="5" 
                     Text="{Binding BreakTime_Start_Hour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="：" 
                   Grid.Column="2" 
                   Grid.Row="5" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Background="AliceBlue"/>
            <TextBox Grid.Column="3" 
                     Grid.Row="5" 
                     Text="{Binding BreakTime_Start_Minute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="～" 
                   Grid.Column="4" 
                   Grid.Row="5" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Background="AliceBlue"/>
            <TextBox Grid.Column="5" 
                     Grid.Row="5" 
                     Text="{Binding BreakTime_End_Hour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="：" 
                   Grid.Column="6" 
                   Grid.Row="5" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Background="AliceBlue"/>
            <TextBox Grid.Column="7" 
                     Grid.Row="5" 
                     Text="{Binding BreakTime_End_Minute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="備考" 
                   Grid.Row="6" 
                   Background="AliceBlue"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="6" 
                     Grid.ColumnSpan="7" 
                     Text="{Binding Remarks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="追加" 
                    Grid.Row="7" 
                    Grid.ColumnSpan="3" 
                    Command="{Binding Add_Command}"
                    IsEnabled="{Binding Add_IsEnabled}" />
            <Button Content="更新"
                    Grid.Column="3"
                    Grid.Row="7" 
                    Grid.ColumnSpan="3" 
                    Command="{Binding Update_Command}"
                    IsEnabled="{Binding Update_IsEnabled}" />
            <Button Content="削除"
                    Grid.Column="6" 
                    Grid.Row="7" 
                    Grid.ColumnSpan="2" 
                    Command="{Binding Delete_Command}"
                    IsEnabled="{Binding Delete_IsEnabled}" />
        </Grid>
    </Grid>
</Controls:MetroWindow>
